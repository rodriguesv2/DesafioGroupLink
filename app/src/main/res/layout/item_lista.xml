<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/item_lista_mac_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="MAC: "
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_lista_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="FF:FF:FF:FF:FF:FF"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/item_lista_mac_label"
            app:layout_constraintTop_toTopOf="@id/item_lista_mac_label"/>

    <TextView
            android:id="@+id/item_lista_uuid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="UUID iBeacon: "
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/item_lista_mac_label"
            app:layout_constraintTop_toBottomOf="@id/item_lista_mac_label"/>

    <TextView
            android:id="@+id/item_lista_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20cc4ce3-5d0b-42c8-a57c-ed6ee945411e"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/item_lista_uuid_label"
            app:layout_constraintTop_toTopOf="@id/item_lista_uuid_label"/>

    <TextView
            android:id="@+id/item_lista_major_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Major: "
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/item_lista_uuid_label"
            app:layout_constraintTop_toBottomOf="@id/item_lista_uuid_label"/>

    <TextView
            android:id="@+id/item_lista_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/item_lista_major_label"
            app:layout_constraintTop_toTopOf="@id/item_lista_major_label"/>

    <TextView
            android:id="@+id/item_lista_minor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Minor: "
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/item_lista_major"
            app:layout_constraintTop_toTopOf="@id/item_lista_major"/>

    <TextView
            android:id="@+id/item_lista_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            tools:text="50"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/item_lista_minor_label"
            app:layout_constraintTop_toTopOf="@id/item_lista_minor_label"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>